# Admin user
ADMIN_EMAIL=admin@streamix.local
ADMIN_PASSWORD=changeme123

# IPTV Provider
IPTV_PROVIDER_NAME=MyProvider
IPTV_PROVIDER_URL=http://provider.example.com
IPTV_USERNAME=your_username
IPTV_PASSWORD=your_password

# Production Environment
# Database
DB_PASSWORD=your_secure_password_here

# Phoenix (generate with: mix phx.gen.secret)
SECRET_KEY_BASE=

# Optional: Global IPTV Provider
GLOBAL_PROVIDER_ENABLED=false
GLOBAL_PROVIDER_NAME=
GLOBAL_PROVIDER_URL=
GLOBAL_PROVIDER_USERNAME=
GLOBAL_PROVIDER_PASSWORD=

# Optional: TMDB API for metadata enrichment
TMDB_API_TOKEN=

# CORS Configuration
# Comma-separated list of allowed origins, or "*" to allow all (not recommended for production)
CORS_ORIGINS=https://streamix.mahina.cloud

# Stream Proxy URL (for bypassing mixed content blocking)
STREAM_PROXY_URL=https://proxy.example.com

# API Keys for TV app and external clients (comma-separated)
# Generate with: mix phx.gen.secret 32
# Leave empty to disable API key auth (dev mode)
API_KEYS=

# Optional: GIndex Provider (Google Drive Index for movies/series/animes)
# Paths are configured in gindex_drives on the provider record
GINDEX_ENABLED=false
GINDEX_URL=

# Optional: RabbitMQ for distributed sync workers (Broadway)
# When disabled, falls back to Oban for background jobs
RABBITMQ_ENABLED=false
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Broadway concurrency settings (optional, defaults shown)
BROADWAY_CONCURRENCY=5

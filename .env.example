# Database
DB_PASSWORD=streamix

# Phoenix (generate with: mix phx.gen.secret)
SECRET_KEY_BASE=

# Admin user
ADMIN_EMAIL=admin@streamix.local
ADMIN_PASSWORD=changeme123

# IPTV Provider (legacy single provider - use Global Provider instead)
IPTV_PROVIDER_NAME=MyProvider
IPTV_PROVIDER_URL=http://provider.example.com
IPTV_USERNAME=your_username
IPTV_PASSWORD=your_password

# Global Provider (visible to all users)
GLOBAL_PROVIDER_ENABLED=false
GLOBAL_PROVIDER_NAME=
GLOBAL_PROVIDER_URL=
GLOBAL_PROVIDER_USERNAME=
GLOBAL_PROVIDER_PASSWORD=

# TMDB API (for enriched movie/series metadata)
TMDB_API_TOKEN=

# API Keys for TV app and external clients (comma-separated)
# Generate with: mix phx.gen.secret 32
API_KEYS=

# CORS Configuration
# Comma-separated list of allowed origins, or "*" to allow all (not recommended for production)
CORS_ORIGINS=http://localhost:4000

# Stream Proxy URL (for bypassing mixed content blocking)
STREAM_PROXY_URL=https://proxy.example.com

# GIndex Provider (Google Drive Index for movies/series/animes)
GINDEX_ENABLED=false
GINDEX_URL=

# RabbitMQ (Broadway distributed sync workers)
# When disabled, falls back to Oban for background jobs
RABBITMQ_ENABLED=false
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=streamix
RABBITMQ_PASSWORD=streamix
RABBITMQ_VHOST=/
BROADWAY_CONCURRENCY=5

# Gemini AI for semantic search
GEMINI_API_KEY=

# Qdrant vector database
QDRANT_URL=http://localhost:6333

# NVIDIA API (for embeddings)
